        <li id="OccupationLeftBtn" data-toggle="modal" data-target="#Occupation">
            <a>詳細条件</a>
        </li>
    </ul>
        }
        else if (Context.User.IsInRole("person".ToLower()))
        {
            <ul class="nav nav-tabs nav-stacked" data-spy="affix" data-offset-top="100">
                <li class="active"><a href="#section-1">検索条件</a></li>
                <li>
                    <a id="LinkButton12" asp-area="" asp-controller="Job" asp-action="JobList">掲載一覧</a>
