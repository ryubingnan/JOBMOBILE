                <li>
                    <a id="LinkButton16" asp-area="" asp-controller="Ask" asp-action="AddAsk">お問い合わせ</a>
                </li>
                <li>
                    <a id="LinkButton17" asp-area="" asp-controller="Resume" asp-action="AddResume">履歴登録</a>
                </li>
                <li>
                    <a id="LinkButton18" asp-area="" asp-controller="System" asp-action="AddPlay">履歴更新</a>
                </li>
                <li>
                    <a id="LinkButton19" asp-area="" asp-controller="System" asp-action="AddPlay">パスワード変更</a>
                </li>
            </ul>
        }
    </div>

    @{
        string type = string.Empty;
        if (User.Identity.IsAuthenticated)
            type = User.Claims?.FirstOrDefault(c => c.Type == System.Security.Claims.ClaimTypes.Role).Value;
    }
</body>