@{
    ViewData["Title"] = "ニュース掲載";
    Layout = "_JobLayout";
}
@using job.Web.Models.System
@model NewsListViewModel

<div class="addJobArea">
    @*小导航*@
    <div class="navigationSmall">
        <ul>
            <li>
                <a href="/">
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" style="float:left;" fill="currentColor" class="bi bi-house-heart-fill" viewBox="0 0 16 16">
                        <path d="M7.293 1.5a1 1 0 0 1 1.414 0L11 3.793V2.5a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v3.293l2.354 2.353a.5.5 0 0 1-.708.707L8 2.207 1.354 8.853a.5.5 0 1 1-.708-.707L7.293 1.5Z" />
                        <path d="m14 9.293-6-6-6 6V13.5A1.5 1.5 0 0 0 3.5 15h9a1.5 1.5 0 0 0 1.5-1.5V9.293Zm-6-.811c1.664-1.673 5.825 1.254 0 5.018-5.825-3.764-1.664-6.691 0-5.018Z" />
                    </svg><span>トップ</span>
                </a>
            </li>
            <li>/ニュース掲載</li>
        </ul>
    </div>
    <form id="theform" asp-area="" asp-controller="News" asp-action="AddNews" enctype="multipart/form-data" method="post">
        @*<input type="hidden" id="Id" name="Id" value="@Model.Id" />*@
        <table>
            <tr>
                <td>タイトル</td>
                <td colspan="2">
                    <textarea asp-for="Title" 　value="" class="form-control" rows="1" placeholder="例：一般事務・データ入力　◆ほぼ１７時半終業◆１月まで！書類チェックなど／未経験ＯＫ！"></textarea>
                    <span asp-validation-for="Title" class="text-danger"></span>
                </td>
            </tr>
            <tr>
                <td>内容</td>
                <td colspan="2">
                    <textarea asp-for="Content" value="" class="form-control" rows="15" placeholder="応募条件【必須スキル・経験】■実務経験（2年以上）■iOS、Androidのいずれか（もしくは両方）■iOS：swiftメインでのアプリ開発（obj-Cも多少分かれば尚可）■Android：Kotlin、Javaでのアプリ開発【歓迎スキル・経験】■スケジューリング能力■UX観点での企画、設計力■能動的な姿勢"></textarea>
                    <span asp-validation-for="Content" class="text-danger"></span>
                </td>
            </tr>
            <tr>
                <td></td>
                <td><button class="ic_shoulei hide_txt png btn btn-primary btn-lg marginLeft200px " type="submit">提出する</button></td>
                <td><button class="ic_shoulei hide_txt png btn btn-primary btn-lg marginLeft100px" type="button" onclick="FormReset()">クリア</button></td>
            </tr>
        </table>
    </form>
</div>
@section Scripts{
    <script type="text/javascript">
        $(function () {
            /*菜单光标颜色*/
            $('#AddNewsLeftBarBtn').css('color', '#ae0000')
        })
    </script>
}