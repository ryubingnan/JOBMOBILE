@{
    ViewData["Title"] = "ニュース一覧";
    Layout = "_JobLayout";
}
@using job.Web.Models.System
@model List<NewsListViewModel>

<div class="addJobArea">
    @*小导航*@
    <div class="navigationSmall">
        <ul>
            <li>
                <a href="/">
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" style="float:left;" fill="currentColor" class="bi bi-house-heart-fill" viewBox="0 0 16 16">
                        <path d="M7.293 1.5a1 1 0 0 1 1.414 0L11 3.793V2.5a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5v3.293l2.354 2.353a.5.5 0 0 1-.708.707L8 2.207 1.354 8.853a.5.5 0 1 1-.708-.707L7.293 1.5Z" />
                        <path d="m14 9.293-6-6-6 6V13.5A1.5 1.5 0 0 0 3.5 15h9a1.5 1.5 0 0 0 1.5-1.5V9.293Zm-6-.811c1.664-1.673 5.825 1.254 0 5.018-5.825-3.764-1.664-6.691 0-5.018Z" />
                    </svg><span>トップ</span>
                </a>
            </li>
            <li>/ニュース一覧</li>
        </ul>
    </div>
    @*搜索框*@
    <div>
        <table>
            <tr style="border-bottom:none;">
                <td></td>
                <td>
                    <input class="form-control" type="text" v-model="iptTitle" placeholder="タイトル" />
                </td>
                <td>
                    <input class="form-control" type="text" v-model="iptCategory" placeholder="タイプ" />
                </td>
                <td style="text-align:left;">
                    <input type="button" class="ic_shoulei hide_txt png btn btn-primary btn-light marginRight10" value="検索" @@click="handleGetJobs" />
                    <input type="button" class="ic_shoulei hide_txt png btn btn-primary btn-light" value="クリア" @@click="handleClear" />
                </td>
                <td></td>
            </tr>
        </table>
    </div>
    <table class="table table-striped table-hover">
        <thead>
            <tr style="font-weight:bold;">
                <td>id</td>
                <td>会員ID</td>
                <td>タイトル</td>
                <td>内容</td>
                <td>日付</td>
            </tr>
        </thead>
        <tbody>
            <tr>
                @foreach (var newslist in Model)
                {
                <tr>
                    <td> @Html.DisplayFor(model => newslist.Id)</td>
                    <td> @Html.DisplayFor(model => newslist.MemberID)</td>
                    <td> @Html.DisplayFor(model => newslist.Title)</td>
                    <td> @Html.DisplayFor(model => newslist.Content)</td>
                    <td> @Html.DisplayFor(model => newslist.DateTime)</td>
                </tr>
            }
            </tbody>
        </table>
    </div>

    @section Scripts{
        <script type="text/javascript">
            $(function () {
                /*菜单光标颜色*/
                $('#NewsListLeftBarBtn').css('color', '#ae0000')
            })
        </script>
    }
